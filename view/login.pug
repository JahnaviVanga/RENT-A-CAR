doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Rent a Car - Login
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-image: url('css/1.png');
        background-size: cover;
        background-position: center;
        color: #333;
      }
      header {
        background-color: rgba(51, 51, 51, 0.8);
        padding: 10px;
        color: #fff;
        text-align: center;
        border-bottom: 2px solid #fff;
      }
      nav ul {
        list-style-type: none;
        padding: 0;
      }
      nav ul li {
        display: inline;
        margin-right: 15px;
      }
      nav ul li a {
        color: #fff;
        text-decoration: none;
      }
      main {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        opacity: 0.9;
      }
      .form-section {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        width: 400px;
      }
      .form-container {
        display: flex;
        flex-direction: column;
      }
      .form-container label, 
      .form-container input {
        margin-bottom: 15px;
      }
      .form-container input {
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        width: 100%;
        box-sizing: border-box;
      }
      .submit-button, 
      .reset-button {
        padding: 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 10px;
        font-size: 16px;
      }
      .submit-button {
        background-color: #28a745;
        color: white;
        transition: background-color 0.3s ease;
      }
      .submit-button:hover {
        background-color: #218838;
      }
      .reset-button {
        background-color: #dc3545;
        color: white;
        transition: background-color 0.3s ease;
      }
      .reset-button:hover {
        background-color: #c82333;
      }
      .hidden {
        display: none;
      }
      .account-section {
        display: none;
        margin-top: 20px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
      }
      footer {
        text-align: center;
        padding: 10px;
        background-color: rgba(51, 51, 51, 0.8);
        color: #fff;
        position: fixed;
        bottom: 0;
        width: 100%;
      }
      a {
        color: #007bff;
        text-decoration: none;
        transition: color 0.3s;
      }
      a:hover {
        color: #0056b3;
      }

  body
    header
      h1 Rent a Car
      h2 Login to Your Account

    main
      section.form-section
        h2 Login to Your Account
        form#loginForm.form-container
          label(for="email") Email:
          input(type="email" id="email" name="email" required aria-label="Email Address")
          label(for="password") Password:
          input(type="password" id="password" name="password" required aria-label="Password")
          button.submit-button(type="submit") Login
          button.reset-button(type="reset") Reset
          p
            a(href="#" id="forgotPasswordLink") Forgot Password?
          p DONT HAVE AN ACCOUNT?
          p
            a(href="#" id="registerLink") Register

        // Reset Password Form
        form#resetPasswordForm.form-container.hidden
          h2 Reset Your Password
          label(for="resetEmail") Email:
          input(type="email" id="resetEmail" name="resetEmail" required aria-label="Reset Email")
          label(for="newPassword") New Password:
          input(type="password" id="newPassword" name="newPassword" required aria-label="New Password")
          label(for="confirmPassword") Confirm Password:
          input(type="password" id="confirmPassword" name="confirmPassword" required aria-label="Confirm Password")
          button.submit-button(type="submit") Submit
          button#cancelResetButton.reset-button(type="button") Cancel

    footer
      p Contact us at 
        a(href="mailto:info@rentacar.com") info@rentacar.com

    script.
      const simulatedUser = {
        name: 'Nikitha',
        email: 'nikithaalapati@gmail.com',
        password: 'nikitha'
      };
      const loginForm = document.getElementById('loginForm');
      const resetPasswordForm = document.getElementById('resetPasswordForm');
      const emailInput = document.getElementById('email');
      const passwordInput = document.getElementById('password');
      loginForm.addEventListener('submit', function(event) {
        event.preventDefault();
        const email = emailInput.value;
        const password = passwordInput.value;
        if (email === simulatedUser.email && password === simulatedUser.password) {
          window.location.href = 'index.html';
        } else {
          alert('Invalid email or password. Please try again.');
        }
      });
      document.getElementById('forgotPasswordLink').addEventListener('click', function(event) {
        event.preventDefault();
        loginForm.style.display = 'none';
        resetPasswordForm.style.display = 'block';
      });
      document.getElementById('cancelResetButton').addEventListener('click', function() {
        resetPasswordForm.style.display = 'none';
        loginForm.style.display = 'block';
      });
      document.getElementById('registerLink').addEventListener('click', function(event) {
        event.preventDefault();
        window.location.href = 'register.html';
      });